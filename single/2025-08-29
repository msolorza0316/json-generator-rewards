    <script>
        // Global variables
        let template = {};
        const valueMap = new Map();
        window.sameCopyState = "No";
        window.sameCopyHandlers = {};
        window.expanderState = {};

        // Template data
        const templateData = {
            "modal": {
                "members": {
                    "detailStep": {
                        "title": "Get $150 from Finder",
                        "ctaText": "Go to Chime",
